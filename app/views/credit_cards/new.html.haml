= render 'items/header'
.title
  .title__contents
    クレジットカード入力画面
.main-form
  .main-form__frame
    = form_tag(new_credit_card_path, method: :post, id: 'charge-form',  name: "inputForm") do
      .form-group
        %label カード番号
        %span.form-group__require 必須
        %br
        = text_field_tag "number", "", class: "form-group__input", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %ul.card-list
          %li.icon-visa
            = image_tag asset_path("card/Visa.svg"), size: "40x30", alt:"visa"
          %li.icon-master
            = image_tag asset_path("card/Master.svg.png"), size: "40x30", alt:"master"
          %li.icon-discover
            = image_tag asset_path("card/discover.png"), size: "40x30", alt:"discover"
          %li.icon-jcb
            = image_tag asset_path("card/JCB.svg.png"), size: "40x30", alt:"JVB"
          %li.icon-amex
          = image_tag asset_path("card/amex.svg"), size: "40x30", alt:"AMEX"
          %li.icon-diners
          = image_tag asset_path("card/Diners.png"), size: "40x30", alt:"diners"
      .form-group
        %label 有効期限
        %span.form-group__require 必須
        %br
        %select#exp_month{name: "exp_month", type: "text", class: 'form-group__input__one'}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        %label 月
        %select#exp_year{name: "exp_year", type: "text", class: 'form-group__input__one'}
          %option{value: ""} --
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        %label 年
      .form-group
        %label セキュリティコード
        %span.form-group__require 必須
        %br
        = text_field_tag "cvc", "", type: 'text', class: "form-group__input", id: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4"

      .form-group__add
        .form-group__add__question ?
        %p.form-group__text--right--blue
          カードの裏面の番号とは？
      .form-group
        #card_token
        = submit_tag "登録する", id: "token_submit",class: "btn--red"
= render 'items/footer'